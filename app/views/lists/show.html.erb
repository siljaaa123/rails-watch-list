<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to lists_path, class: "navbar-brand" do %>
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>
    <div id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= image_tag "https://avatars.githubusercontent.com/u/153533899?v=4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1542204165-65bf26472b9b?q=80&w=1074&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-4">
  <div class="buttons">
    <%= link_to "Back", lists_path, class: "button-back" %>
    <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "button-bookmark" %>
  </div>
  <% @list.movies.each do |movie| %>
    <div class="card-product">
      <img src=<%= movie.poster_url%> />
      <div class="card-product-infos">
        <div class="title-container">
          <h4><%= movie.title %> • </h4>
          <p><%= movie.rating %> ⭐</p>
        </div>
        <p><%= movie.overview %></p>
        <div class="buttons">
          <%# <%= link_to new_list_bookmark_path(@list), class: "button" do %>
            <%# <i class="fa-solid fa-bookmark"></i> %>
          <%# <% end %>
          <%= link_to list_path(@list), class: "button", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
